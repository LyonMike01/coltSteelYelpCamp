<%- include("partials/header") %>


<div class="container">

    <header class="jumbotron">
        <div class="container">
            <h1>Welcome!!! Choises of Camp</h1>
        
            <p>See for yourself below </p>
    

            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    

    <div class="row">
    
        <% campgrounds.forEach((camp) => { %>
    
            <div class="col-md-3 col-sm-6"> 
                <div class="thumbnail">
                    <img src="<%=camp.image%>" style="height: 200px; width: 280px;">
                    <div class="caption">
                        <h3> <%= camp.name %> </h3>
                    </div>                
                </div>
            </div>
        <% }) %> 
    
    </div>

</div>

<%- include("partials/footer") %>